<h1>Listing Vehicles</h1>

<table class="table">
  <thead>
    <tr>
      <th>Price</th>
      <th>Exterior color</th>
      <th>Interior material</th>
      <th>Condition</th>
      <th>Price</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.price %></td>
        <td><%= vehicle.exterior_color %></td>
        <td><%= vehicle.interior_material %></td>
        <td><%= vehicle.condition %></td>
        <td><%= vehicle.price %></td>
        <td><%= vehicle.category.name %></td>
        <td><%= number_to_currency(vehicle.price) %></td>
        <td><%= link_to 'Show', vehicle, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle),class: "btn btn-default" %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vehicle', new_vehicle_path, class: "btn btn-primary" %>
